<div class="container-fluid">
  <div class="jumbotron row">
        <h3>Log in</h3>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
            <%= f.label :email, class:'col-xs-2 col-form-label' %><br />
            <%= f.email_field :email, atofocus: true, class:'form-control' %>
          </div>

          <div class="field col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
            <%= f.label :password, class:'col-xs-2 col-form-label' %><br />
            <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
              <%= f.check_box :remember_me, class:'form-check-input' %>
              <%= f.label :remember_me, class:'col-form-label' %>
            </div>
          <% end -%>

          <div class="actions col-sm-12 col-md-12">
            <%= f.submit "Log in", class:'btn' %>
          </div>
        <% end %>
          
          <div class="actions col-sm-12 col-md-12">
            <%= render "devise/shared/links" %>
          </div>
  </div><!-- jumbotron-row-end -->
</div><!-- container-end -->
