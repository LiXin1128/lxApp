<div class="container-fluid">
  <div class="jumbotron">
    <div class="row">
      <div>
		<h2>Forgot your password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
		    <%= f.label :email, class:'col-xs-2 col-form-label' %><br />
		    <%= f.email_field :email, autofocus: true, class:'form-control' %>
		  </div>

		  <div class="actions col-sm-12 col-md-12">
		    <%= f.submit "Send me reset password instructions", class: 'btn' %>
		  </div>
		<% end %>

		  <div class="actions col-sm-12 col-md-12">
			<%= render "devise/shared/links" %>
		  </div>
      </div>
    </div><!-- row-end -->
  </div><!-- jumbotron-end -->
</div><!-- container-end -->