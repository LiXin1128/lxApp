<div class="container-fluid">
  <div class="jumbotron">
    <div class="row">
      <div>
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
            <%= f.label :email, class:'col-xs-2 col-form-label' %><br />
            <%= f.email_field :email, autofocus: true, class:'form-control' %>
          </div>

          <div class="field col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
            <%= f.label :password, class:'col-xs-2 col-form-label' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
          </div>

          <div class="field col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
            <%= f.label :password_confirmation, class:'col-xs-2 col-form-label navbar-left' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
          </div>

          <div class="actions col-sm-12 col-md-12">
            <%= f.submit "Sign up", class:'btn' %>
          </div>
        <% end %>

          <div class="actions col-sm-12 col-md-12">
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div><!-- row-end -->
  </div><!-- jumbotron-end -->
</div><!-- container-end -->