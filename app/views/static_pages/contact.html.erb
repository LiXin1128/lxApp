<div class="container">
	<p><strong>Contact</strong></p>
	
	<%= flash[:notice] %>

	<%= form_tag("/static_pages/thank_you") do %>
	<div class="row">
	  <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6 col-centered">
	    <div class="form-group">
	      <%= label_tag :name %>
	      <%= text_field_tag :name, nil, class: 'form-control', placeholder: "Enter here" %>
	    </div>      
	    <div class="form-group">
	      <%= label_tag :email, "Email Address" %>
	      <%= text_field_tag :email, nil, class: 'form-control', placeholder: "Enter email" %>
	    </div>
	    <div class="form-group">
	      <%= label_tag :message %>
	      <%= text_area_tag :message, nil, class: 'form-control', placeholder: "Enter message" %>
	    </div>  
	    <div class="form-group">
	    	<%= submit_tag "Send Message", class: 'btn btn-success btn-md' %>
	    </div>
	  </div>
	</div> <!--row end-->

	   
<% end %>

</div> <!--col end-->