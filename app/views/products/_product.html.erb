<% cache product do %>
<div class="container-fuild">
    <div class="col-sm-6 col-md-6 col-lg-4 item_bike">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <div class="overview-detail">
            <h3><%= product.name %></h3>
            <h5>$ <%= product.price %></h5>
            <h5><%= product.color %></h5>

            <span><%= link_to 'Show', product, class: "btn btn-xs btn-default" %></span>
            <% if signed_in? %>
              <span><%= link_to 'Edit', edit_product_path(product), class: "btn btn-xs btn-default" %></span>
              <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-warning" %></span>
            <% end %>
        </div> <!-- overview-detail -->
    </div><!-- /col -->
</div> <!-- container-fuild -->
<% end %>